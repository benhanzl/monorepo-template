{
  "permissions": {
    "disableBypassPermissionsMode": "disable",
    "allow": [
      "Bash(cat *)",
      "Bash(find *)",
      "Bash(gh pr checks *)",
      "Bash(gh pr diff *)",
      "Bash(gh pr list *)",
      "Bash(gh pr status *)",
      "Bash(gh pr view *)",
      "Bash(gh status *)",
      "Bash(git add *)",
      "Bash(git branch)",
      "Bash(git checkout *)",
      "Bash(git commit *)",
      "Bash(git diff *)",
      "Bash(git fetch *)",
      "Bash(git log *)",
      "Bash(git pull *)",
      "Bash(git push)",
      "Bash(git show *)",
      "Bash(git status *)",
      "Bash(ls *)",
      "Bash(pnpm *)",
      "Bash(tree *)"
    ],
    "ask": [
      "Bash(gh pr close *)",
      "Bash(gh pr create *)",
      "Bash(gh pr merge *)",
      "Bash(gh pr reopen *)",
      "Bash(git commit --amend *)",
      "Bash(git push --force *)",
